@model ChatLoco.Models.User_Model.LoginRequestModel

<div id="login-container" >

    <h2>User Login</h2>

    <div id="login-information-container">
        <div id="login-errors" class="text-danger"></div>
        <div id="login-form-container">
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id="login-form" }))
            {
                @Html.AntiForgeryToken()
                <br />
                <p> Username: @Html.TextBoxFor(model => model.Username, new { @id = "username-input" }) </p>
                <br />
                <p> Password: @Html.PasswordFor(model => model.Password, new { @id = "password-input" }) </p>
                <input type="submit" />
            }
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/user")