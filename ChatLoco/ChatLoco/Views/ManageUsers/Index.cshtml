
<div class="white">
    <h2>
        User Management
    </h2>
    <form class="form-horizontal" id="manage-users-form" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Username" name="name" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Action</label>
            <div class="col-sm-10">
                <label><input type="radio" class="form-control" name="action" value="MakeAdmin" checked>Make Admin</label>
                <!--TODO make lock/unlock functional-->
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input id="submit" name="submit" type="submit" value="Perform Action" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>
@Scripts.Render("~/bundles/Admin")