@model ChatLoco.Models.Chatroom_Model.ChatRequestModel

@Html.Partial("~/Views/Shared/_AccountHandling.cshtml", Model)

<h1>Find a Chatroom</h1>

<div id="InformationContainer">
    @using (Html.BeginForm("Chat", "Chatroom", FormMethod.Post))
    {
        <br />
        <p> Chatroom Name: @Html.TextBoxFor(model => model.ChatroomName, new { @class = "ChatroomName-Input" }) </p>
        <br />
        <p>Username: @Html.TextBoxFor(model => model.Username, new { @class = "Username-Input" }) </p>
        <input type="submit" />
    }
</div>
