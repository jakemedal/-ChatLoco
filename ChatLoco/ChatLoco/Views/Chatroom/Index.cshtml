@model ChatLoco.Models.Base_Model.BaseModel

@Html.Partial("~/Views/Shared/_AccountHandling.cshtml", Model)

<head>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>

<div id="content-container">
    <h1>Find a Chatroom</h1>
    <h5>Coordinates: <input id="lat" type="text" disabled /> <input id="lon" type="text" disabled/> </h5>

    <div id="find-chatroom-container">
        <form id="find-chatroom-form">
            <br />
            <p>Coord 1: <input type="text" name="coord1" /> Coord 2: <input type="text" name="coord2"/></p>
            <br />
            <p>User Handle: <input type="text" name="userHandle" /></p>
            <input type="submit" />
        </form>
        <br/>
        <body>
            <div id="map"></div>
            <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzJTQNNWNeo6oJFvL0p4tlzG5m3GhC8Nc&libraries=places&callback=initMap" async defer></script>
        </body>
    </div>

</div>

@Scripts.Render("~/bundles/chatroom")

