<div class="row">
    <div class="col-xs-1"></div>
    <div id="find-chatroom-container" class="white col-md-4 text-left">
        <div class="h1">Find a Chatroom</div>
        <div class="input-group">
            <label class="control-label">Coordinates:</label>
            <input class="input-sm" id="lat" type="text" disabled /> 
            <input class="input-sm" id="lon" type="text" disabled /> 
        </div>

        <form id="find-chatroom-form" class="form-horizontal">
            <div class="form-group">
                <label class="control-label">Coord 1:</label>
                <input class="form-control" type="text" id="coord1" /> 
                <label class="control-label">Coord 2:</label>
                <input class="form-control" type="text" id="coord2" />
            </div>
            <div class="form-group">
                <select class="form-control" id="chatroomPlaces">
                    <option selected="selected" value=""> Use Coordinates </option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">User Handle:</label>
                <input class="form-control"type="text" name="userHandle" required/>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Find Chat" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div id="map"></div>
    </div>
</div>

